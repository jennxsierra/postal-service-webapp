<!-- src/views/packages/new.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Create a New Package</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <%- include('../partials/header.ejs') %>
    <div class="container">
      <h1>Add a New Package</h1>
      <form class="package-form" action="/packages" method="POST">
        <div class="form-group">
          <label for="senderName">Sender Name:</label>
          <input type="text" name="senderName" required />
        </div>

        <div class="form-group">
          <label for="senderAddress">Sender Address:</label>
          <input type="text" name="senderAddress" required />
        </div>

        <div class="form-group">
          <label for="receiverName">Receiver Name:</label>
          <input type="text" name="receiverName" required />
        </div>

        <div class="form-group">
          <label for="receiverAddress">Receiver Address:</label>
          <input type="text" name="receiverAddress" required />
        </div>

        <div class="form-group">
          <label for="weight">Weight (kg):</label>
          <input type="number" step="1" name="weight" required />
        </div>

        <div class="form-group">
          <label for="costPerUnitWeight">Cost Per Unit Weight ($/kg):</label>
          <input type="number" step="1" name="costPerUnitWeight" required />
        </div>

        <div class="form-group">
          <label for="flatFee">Flat Fee ($):</label>
          <input type="number" step="1" name="flatFee" required />
        </div>

        <div class="form-group">
          <label for="shippingMethod">Shipping Method:</label>
          <select name="shippingMethod">
            <option value="OneDay">One Day</option>
            <option value="TwoDay">Two Day</option>
          </select>
        </div>

        <div class="submit-btn">
          <button type="submit" class="button">Create Package</button>
        </div>
      </form>

      <div class="back-btn">
        <a href="/packages" class="button">&#129136; Back to All Packages</a>
      </div>
    </div>

    <%- include('../partials/footer.ejs') %>
  </body>
</html>
